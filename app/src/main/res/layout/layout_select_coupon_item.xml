<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layout_red_packet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/img_red_packet_left">
            <!--红包金额-->
            <LinearLayout
                android:id="@+id/layout_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_red_packet_value"
                        style="@style/custom_white_big_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:singleLine="true"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/custom_white_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
            <!--期限，条件-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/layout_value"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_red_packet_name"
                    style="@style/custom_white_middle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/txt_use_condition1"
                    style="@style/custom_white_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/txt_use_condition2"
                    style="@style/custom_white_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/txt_expire"
                    style="@style/custom_white_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_state"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/img_red_packet_right">

            <TextView
                android:id="@+id/txt_status"
                style="@style/custom_white_small_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_red_packet_right_red"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="可用"/>
            <ImageView
                android:id="@+id/img_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/img_check_red_packet_right"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

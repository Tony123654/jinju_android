<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<include layout="@layout/top_title_bar"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
 		android:background="@color/separator"/>
       
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        android:paddingTop="20dip"
		android:paddingBottom="20dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_success" />

        <TextView
            android:textSize="18sp"
            android:textColor="@color/word_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="@string/pay_success"/>
   	</LinearLayout>
        
   	<View
   	    android:layout_width="match_parent"
   	    android:layout_height="1px"
   	    android:background="@color/separator"/>
   	
   	<View
   	    android:layout_width="match_parent"
   	    android:layout_height="10dp"/>

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            style="@style/custom_word_black_middle_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/product_name"/>

        <TextView
            android:id="@id/txt_name"
            android:textSize="14sp"
         	android:textColor="#B1B1B2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
			android:gravity="end"
            android:layout_weight="7"/>
    </LinearLayout>

	<View
   	    android:layout_width="match_parent"
   	    android:layout_height="1px"
   	    android:background="@color/separator"/>

	<View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/separator"/>
        
    <LinearLayout
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:background="@color/white"
   	    android:paddingLeft="18dp"
   	    android:paddingRight="18dp"
   	    android:paddingTop="10dp"
   	    android:paddingBottom="10dp">
   	    
   	    <TextView 
   	        style="@style/custom_word_black_middle_text"
   	        android:layout_width="0dp"
   	        android:layout_height="wrap_content"
   	        android:layout_weight="3"
   	        android:text="@string/product_order"/>
   	    
   	    <TextView 
   	        android:id="@id/txt_amount"
			android:textSize="14sp"
			android:textColor="#B1B1B2"
   	        android:layout_width="0dp"
   	        android:layout_height="wrap_content"
			android:gravity="end"
   	        android:layout_weight="7"/>
   	</LinearLayout>
   	
   	<View
   	    android:id="@id/view_coupon_separator"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/separator"/>
   	
   	<LinearLayout
   	    android:id="@id/layout_coupon"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:background="@color/white"
   	    android:paddingLeft="18dp"
   	    android:paddingRight="18dp"
   	    android:paddingTop="10dp"
   	    android:paddingBottom="10dp">
   	    
   	    <TextView 
   	        style="@style/custom_word_black_middle_text"
   	        android:layout_width="0dp"
   	        android:layout_height="wrap_content"
   	        android:layout_weight="3"
   	        android:text="@string/use_coupon"/>
   	    
   	    <TextView 
   	        android:id="@id/txt_coupon"
			android:textSize="14sp"
			android:textColor="#B1B1B2"
   	        android:layout_width="0dp"
   	        android:layout_height="wrap_content"
			android:gravity="end"
   	        android:layout_weight="7"/>
   	</LinearLayout>
   	
   	<View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/separator"/>
   	
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

	<View
		android:layout_width="fill_parent"
		android:layout_height="1.0px"
		android:background="@color/separator"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:paddingTop="20dp"
		android:paddingBottom="20dp"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@id/txt_loan_success_notify"
				style="@style/custom_word_black_middle_text"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center"
				android:text="@string/loan_success"/>

			<TextView
				android:id="@id/txt_start_date_notify"
				style="@style/custom_word_black_middle_text"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center"
				android:text="开始计算收益"/>
		</LinearLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="90dp"
			android:paddingRight="90dp"
			android:layout_marginTop="10dp">

			<ImageView
				android:id="@+id/img_blue"
				android:layout_width="15dp"
				android:layout_height="15dp"
				android:src="@mipmap/icon_red"/>

			<ImageView
				android:id="@+id/img_gray"
				android:layout_width="15dp"
				android:layout_height="15dp"
				android:layout_alignParentRight="true"
				android:src="@mipmap/icon_gray"/>

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#E2E2E2"
				android:layout_toLeftOf="@id/img_gray"
				android:layout_toRightOf="@id/img_blue"
				android:layout_centerVertical="true"/>
		</RelativeLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:orientation="horizontal">

			<TextView
				android:id="@id/txt_subscribe_time"
				android:textSize="14sp"
				android:textColor="#B1B1B2"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center"/>

			<TextView
				android:id="@id/txt_start_date"
				android:textSize="14sp"
				android:textColor="#B1B1B2"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center"/>
		</LinearLayout>
	</LinearLayout>

	<View
		android:layout_width="fill_parent"
		android:layout_height="1.0px"
		android:background="@color/separator"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    
    <Button
        android:id="@id/btn_confirm"
	    android:textSize="16sp"
		android:textColor="@color/white"
	    android:layout_width="match_parent"
	    android:layout_height="45dp"
	    android:background="@drawable/btn_red_solid_bg"
	    android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
	    android:text="@string/confirm"/>
    
</LinearLayout>
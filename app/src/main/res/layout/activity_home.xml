<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/home_background">

    <!--浮动窗口-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnableLoadmore="false"
            app:srlHeaderMaxDragRate="2.5">

        <ScrollView
            android:id="@id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/home_background"
            android:scrollbars="none">

            <LinearLayout
                android:id="@id/layout_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.allure.lbanners.LMBanners
                    android:id="@+id/banners"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    app:auto_play="true"
                    app:canLoop="true"
                    app:durtion="5000"
                    app:horizontal_transitionEffect="accordion"
                    app:indicatorBottomPadding="100"
                    app:indicator_position="bottom_mid"
                    app:isGuide="true"
                    app:isVertical="false"
                    app:scroll_duration="1000" />
                <!--广告条-->

                <RelativeLayout
                    android:id="@+id/layout_home_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/iv_home_notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_home_notice"
                        android:layout_marginLeft="12dp"
                        android:layout_centerVertical="true"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" />
                    <com.gongwen.marqueen.MarqueeView
                        android:id="@+id/marqueeView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@color/white"
                        android:paddingLeft="10dp"
                        android:layout_marginRight="50dp"
                        android:layout_toRightOf="@id/iv_home_notice">
                    </com.gongwen.marqueen.MarqueeView>
                    <RelativeLayout
                        android:id="@+id/layout_more_notice"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_small_arrow"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>

                </RelativeLayout>

                <!--了解金桔，邀请有礼-->
                <LinearLayout
                    android:id="@+id/ll_introduce_invite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <!--了解金桔-->
                    <RelativeLayout
                        android:id="@+id/layout_company_introduce"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:id="@+id/txt_company_introduce_title"
                            style="@style/custom_word_black_middle_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            tools:text="@string/home_understand"/>
                        <TextView
                            android:id="@+id/txt_company_introduce_desc"
                            style="@style/custom_word_black_gray_small_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/txt_company_introduce_title"
                            tools:text="@string/home_understand_desc"/>
                        <ImageView
                            android:id="@+id/img_company_introduce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layerType="software"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginRight="-10dp"
                        android:background="@drawable/bg_dotted_line_vertical"
                        android:layout_gravity="center_vertical"/>

                    <RelativeLayout
                        android:id="@+id/layout_invite_friends"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:id="@+id/txt_invite_friends_title"
                            style="@style/custom_word_black_middle_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            tools:text="@string/home_invite_friends"/>
                        <TextView
                            android:id="@+id/txt_invite_friends_desc"
                            style="@style/custom_word_black_gray_small_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/txt_invite_friends_title"
                            tools:text="现金返现无上限" />
                        <ImageView
                            android:id="@+id/img_invite_friends"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"/>
                    </RelativeLayout>

                </LinearLayout>

                <!--新手指引步骤-->

                <LinearLayout
                    android:id="@+id/layout_step_view"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="170dp"
                    android:background="@mipmap/img_step_guidance"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            android:background="@mipmap/icon_step_head_left"/>
                        <TextView
                            style="@style/custom_word_black_middle_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="新手理财，三步攻略"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:background="@mipmap/icon_step_head_right"/>
                    </LinearLayout>
                    <!--指引步骤-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="63dp"
                        android:layout_marginLeft="63dp"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/img_step_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_home_step_1"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1"
                            android:background="@color/main_red"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"/>
                        <ImageView
                            android:id="@+id/img_step_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_home_step_2"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1"
                            android:background="@color/main_red"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"/>
                        <ImageView
                            android:id="@+id/img_step_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_home_step_3"/>
                    </LinearLayout>
                    <!--注册立送，购买新手产品，更多福利-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_step_1"
                                style="@style/custom_word_black_middle_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:textColor="#666666"
                                android:text="@string/home_register_give"/>
                            <TextView
                                android:id="@+id/txt_step_1_desc"
                                style="@style/custom_word_black_small_text"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:textColor="#999999" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_weight="1.5"
                            android:orientation="vertical">
                            <TextView
                                style="@style/custom_word_black_middle_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:textColor="#666666"
                                android:text="@string/home_buy_beginner_product"
                                android:layout_centerHorizontal="true" />
                            <TextView
                                android:id="@+id/txt_step_2_desc"
                                style="@style/custom_word_black_small_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:textColor="#999999" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <TextView
                                style="@style/custom_word_black_middle_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:textColor="#666666"
                                android:text="@string/home_more_welfare"/>
                            <TextView
                                android:id="@+id/txt_step_3_desc"
                                style="@style/custom_word_black_small_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="#999999" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/btn_step_state"
                        style="@style/custom_word_black_middle_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_red"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/btn_dialog_radius_bg"
                        android:layout_marginTop="10dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:text="@string/home_go_register"/>

                </LinearLayout>
                <!--首标-->
                <LinearLayout
                    android:id="@+id/layout_select_product"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/img_first_product_bg"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dip">

                        <TextView
                            android:id="@+id/txt_name"
                            style="@style/custom_word_black_big_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="12dp"
                            android:paddingStart="12dp"
                            android:singleLine="true" />
                        <!--标签-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/txt_name"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_activity_tag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textColor="@color/white"
                                android:layout_marginLeft="10dp"
                                android:visibility="gone"/>
                            <TextView
                                android:id="@+id/txt_activity_tag_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="11sp"
                                android:layout_marginLeft="5dp"
                                android:visibility="gone"/>
                        </LinearLayout>

                        <!--角标-->
                        <ImageView
                            android:id="@id/icon_new"
                            android:layout_width="40dip"
                            android:layout_height="40dip"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            tools:src="@mipmap/icon_new" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:id="@+id/txt_least_invest"
                            style="@style/custom_word_black_gray_middle_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <View
                            android:id="@+id/view_line"
                            android:layout_width="1px"
                            android:layout_height="15dp"
                            android:background="@color/separator"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/txt_least_invest" />
                        <TextView
                            android:id="@+id/txt_deadline"
                            style="@style/custom_word_black_gray_middle_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/view_line"/>
                    </RelativeLayout>
                    <!--利息-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@id/txt_interest_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_red"
                                android:textSize="50sp"/>

                            <TextView
                                android:paddingBottom="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_red"
                                android:textSize="20sp"
                                android:text="@string/percent_unit"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginBottom="5dp" />

                            <TextView
                                android:id="@+id/txt_add_interest"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/main_red"
                                android:textSize="20sp"
                                android:visibility="gone">

                            </TextView>

                        </LinearLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">
                        <ProgressBar
                            android:id="@+id/progress_bar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="100dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_height="3dp"
                            android:progressDrawable="@drawable/financial_progressbar"
                            android:max="100"
                            android:progress="0"/>
                        <TextView
                            android:id="@+id/txt_progress"
                            style="@style/custom_word_black_gray_small_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/progress_bar"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/txt_financial"
                        android:layout_width="270dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:background="@drawable/btn_red_solid_radius_bg"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:text="立即购买"/>

                </LinearLayout>

                <TextView
                    android:id="@id/txt_product_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/custom_word_black_middle_text"
                    android:drawableLeft="@mipmap/icon_youzhi"
                    android:drawablePadding="10dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="快速投资"
                    android:gravity="center_vertical"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@id/layout_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/home_background">
                    <com.jinju.android.widget.HomeListView
                        android:id="@+id/product_list"
                        android:layout_width="match_parent"
                        android:divider="@color/home_background"
                        android:listSelector="#00000000"
                        android:dividerHeight="5.0dip"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:id="@id/txt_product_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/custom_word_black_middle_text"
                    android:drawableLeft="@mipmap/icon_youzhi"
                    android:drawablePadding="10dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="精选阅读"
                    android:gravity="center_vertical" />
                <LinearLayout
                    android:id="@+id/layout_platform_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_corner_item"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="14dp">
                            <ImageView
                                android:id="@+id/img_deal_amount"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/icon_deal_amount"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img_deal_amount"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/txt_deal_amount"
                                    style="@style/custom_word_black_big_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/main_red"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center" />

                                <TextView
                                    style="@style/custom_word_black_small_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="累计交易金额(万)" />
                            </LinearLayout>

                        </RelativeLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layerType="software"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginRight="-10dp"
                        android:background="@drawable/bg_dotted_line_vertical"
                        android:layout_gravity="center_vertical"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="14dp">
                            <ImageView
                                android:id="@+id/img_earn_amount"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/icon_earn_amount"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img_earn_amount"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/txt_earn_amount"
                                    style="@style/custom_word_black_big_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/main_red"
                                    android:gravity="center" />

                                <TextView
                                    style="@style/custom_word_black_small_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="累计为用户赚取(万)" />
                            </LinearLayout>

                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
                <!--水平滑动界面-->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:fillViewport="true"
                    android:scrollbars="none">
                    <LinearLayout
                        android:id="@+id/layout_horizontal_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                    </LinearLayout>
                </HorizontalScrollView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/img_safety_control"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_enterprise"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img_safety_control"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">
                            <TextView
                                style="@style/custom_word_black_gray_small_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

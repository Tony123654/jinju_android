<?xml version="1.0" encoding="utf-8"?>
<com.jinju.android.widget.SegmentBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="50.0dip"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_tab_home"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_tab_home" />

        <TextView
            style="@style/custom_tab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:text="@string/home_recommend" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="50.0dip"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_tab_loan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_tab_loan" />

        <TextView
            style="@style/custom_tab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:text="@string/home_loan" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="50.0dip"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_tab_discover"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_tab_discover" />

        <TextView
            style="@style/custom_tab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:text="@string/home_discover" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="50.0dip"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_tab_profile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_tab_profile" />

        <TextView
            style="@style/custom_tab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:text="@string/home_assets" />
    </LinearLayout>

</com.jinju.android.widget.SegmentBar>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:background="@color/main_red" >

        <TextView
            style="@style/custom_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
			android:textColor="@color/white"
            android:text="@string/sms_verify_code" />
        
        <ImageView
            android:id="@id/img_finish"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
			android:textColor="@color/white"
            android:src="@mipmap/icon_cancel_white"/>
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/separator"/>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        
        <TextView
            android:id="@+id/txt_verify_name"
            style="@style/custom_word_black_middle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bank_add_card"/>
        
        <TextView
            android:id="@+id/txt_bank_add_card"
            style="@style/custom_word_black_middle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/sms_verify_code"/>
        
        <TextView
            android:id="@+id/txt_trans_password"
            style="@style/custom_word_black_middle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/my_withfund_trans_password"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_verify_name"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp">
            
            <ImageView 
	            android:id="@+id/img_verify_name"
	            android:layout_width="7dp"
	            android:layout_height="7dp"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentStart="true"
	            android:src="@mipmap/icon_red"/>
            
            <ImageView 
	            android:id="@+id/img_bank_add_card"
	            android:layout_width="7dp"
	            android:layout_height="7dp"
	            android:layout_centerHorizontal="true"
	            android:src="@mipmap/icon_red"/>
            
            <ImageView 
	            android:id="@+id/img_trans_password"
	            android:layout_width="7dp"
	            android:layout_height="7dp"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentEnd="true"
	            android:src="@mipmap/icon_gray"/>
            
            <View 
	            android:layout_width="wrap_content"
	            android:layout_height="2dp"
	            android:layout_toRightOf="@id/img_verify_name"
	            android:layout_toEndOf="@id/img_verify_name"
	            android:layout_toLeftOf="@id/img_bank_add_card"
	            android:layout_toStartOf="@id/img_bank_add_card"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp"
	            android:background="@color/main_red"/>
            
            <View 
	            android:layout_width="wrap_content"
	            android:layout_height="2dp"
	            android:layout_toRightOf="@id/img_bank_add_card"
	            android:layout_toEndOf="@id/img_bank_add_card"
	            android:layout_toLeftOf="@id/img_trans_password"
	            android:layout_toStartOf="@id/img_trans_password"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp"
	            android:background="@color/separator"/>
            
        </RelativeLayout>
    </RelativeLayout>
    
    <TextView
        android:id="@id/txt_notice"
        style="@style/custom_word_black_middle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
		android:layout_gravity="center"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/separator"/>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_verify_code"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/separator"/>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    
    <Button
        android:id="@id/btn_next"
        android:textSize="16sp"
		android:textColor="@color/btn_text_disabled"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/button_disabled"
        android:layout_margin="10dp"
        android:text="@string/next_step"/>
    
</LinearLayout>
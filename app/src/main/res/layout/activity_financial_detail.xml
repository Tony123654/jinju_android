<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:background="@color/main_red"
        android:layout_alignParentTop="true">

		<RelativeLayout
			android:id="@+id/btn_back"
			android:layout_width="45dp"
			android:layout_height="45dp">
			<ImageView
				android:id="@+id/img_back"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:src="@mipmap/icon_back_white" />
		</RelativeLayout>

        <TextView
            style="@style/custom_title_text"
            android:id="@id/txt_financial_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:textColor="@color/white"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

	<ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@id/layout_scroll"
		android:layout_below="@+id/layout_title"
        android:layout_above="@id/btn_financial">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

				<ImageView
					android:id="@+id/img_detail_sell_out"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@mipmap/img_detail_sell_out"
					android:layout_alignParentRight="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <TextView
                        style="@style/custom_word_black_middle_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="@string/loan_expect_year_interest"/>
                    <!--利率-->
                    <LinearLayout
                        android:id="@id/layout_year_interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@id/txt_year_interest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="50sp"
                            android:textColor="@color/main_red"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/main_red"
                            android:text="@string/percent_unit"/>
                        <TextView
                            android:id="@+id/txt_add_interest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/main_red" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <TextView
                            android:id="@id/txt_loan_period"
                            style="@style/custom_word_black_middle_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@id/txt_least_amount"
                            style="@style/custom_word_black_middle_text"
                            android:layout_toRightOf="@id/txt_loan_period"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginEnd="18dp"
                        android:layout_marginBottom="5dp">

                        <TextView
                        android:id="@+id/txt_progress"
                        style="@style/custom_word_black_small_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/main_red"/>
                    </RelativeLayout>
                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_height="3dp"
                        android:progressDrawable="@drawable/financial_progressbar"
                        android:max="100"
                        android:progress="0"/>

                </LinearLayout>

            </RelativeLayout>
            <!--总额-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:paddingStart="18dp"
                android:paddingRight="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/white">
                <TextView
                    android:id="@id/txt_product_amount"
                    style="@style/custom_word_black_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@id/txt_has_funds_amount"
                    style="@style/custom_word_black_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <TextView
                style="@style/custom_white_middle_text"
                android:id="@id/txt_activity_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/solid_tag_red_bg"
                android:textColor="@color/main_tag_text_red"
                android:gravity="center"
                android:padding="5dp"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/separator"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">

                <TextView
                    style="@style/custom_word_black_middle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起息时间"/>

                <TextView
                    android:id="@id/txt_start_date"
                    android:textSize="14sp"
                    android:textColor="#888A8A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/separator"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">

                <TextView
                    style="@style/custom_word_black_middle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到期时间"/>

                <TextView
                    android:id="@id/txt_end_date"
                    android:textSize="14sp"
                    android:textColor="#888A8A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/separator"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">

                <TextView
                    style="@style/custom_word_black_middle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还款方式"/>

                <TextView
                    android:id="@id/txt_pay_type"
                    android:textSize="14sp"
                    android:textColor="#888A8A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/separator"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/separator"/>

            <TextView
                android:id="@id/txt_loan_security"
                style="@style/custom_word_black_middle_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/img_item_bg"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableRight="@mipmap/icon_small_arrow"
                android:drawableEnd="@mipmap/icon_small_arrow"
                android:text="@string/loan_security"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/separator"/>

            <TextView
                android:id="@id/txt_loan_introduction"
                style="@style/custom_word_black_middle_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/img_item_bg"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableRight="@mipmap/icon_small_arrow"
                android:drawableEnd="@mipmap/icon_small_arrow"
                android:text="@string/loan_introduction"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/separator"/>

            <TextView
                android:id="@id/txt_loan_audit"
                style="@style/custom_word_black_middle_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/img_item_bg"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableRight="@mipmap/icon_small_arrow"
                android:drawableEnd="@mipmap/icon_small_arrow"
                android:text="@string/loan_audit"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/separator"/>
            <TextView
                android:id="@id/txt_loan_subscribe"
                style="@style/custom_word_black_middle_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/img_item_bg"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableRight="@mipmap/icon_small_arrow"
                android:drawableEnd="@mipmap/icon_small_arrow"
                android:text="@string/loan_subscribe"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/separator"/>

            <TextView
                android:id="@+id/txt_safe_message"
                android:textColor="#A7A7A7"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/icon_safe"
                android:drawableStart="@mipmap/icon_safe"
                android:drawablePadding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/btn_financial"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_red_solid_noradius_bg"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_time"
            android:visibility="gone"/>
        <TextView
            android:id="@id/txt_financial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_count_down"
            android:textColor="@color/btn_text_disabled"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:text="立即购买"/>
    </RelativeLayout>
</RelativeLayout>
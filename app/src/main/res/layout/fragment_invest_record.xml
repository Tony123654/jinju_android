<com.jinju.android.widget.MyDetailScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/threeScrollview"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <!--第二名-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/invest_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/img_invest_two"/>
                <TextView
                    android:id="@+id/txt_user_phone_two"
                    style="@style/custom_word_black_middle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/invest_two"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="暂无"/>
                    <TextView
                        android:id="@+id/txt_invest_amount_two"
                        style="@style/custom_word_black_middle_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_user_phone_two"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp" />
            </RelativeLayout>
            <!--第一名 -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/invest_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_invest_first"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/txt_user_phone_first"
                    style="@style/custom_word_black_middle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/invest_first"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="暂无"/>
                <TextView
                    android:id="@+id/txt_invest_amount_first"
                    style="@style/custom_word_black_middle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_user_phone_first"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp" />
            </RelativeLayout>
            <!--第三名-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/invest_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_invest_third"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/txt_user_phone_third"
                    style="@style/custom_word_black_middle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/invest_third"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="暂无"/>
                <TextView
                    android:id="@+id/txt_invest_amount_third"
                    style="@style/custom_word_black_middle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_user_phone_third"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp" />
            </RelativeLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/home_background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5">
                <TextView
                    style="@style/custom_word_black_middle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="投资用户"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5">
                <TextView
                    style="@style/custom_word_black_middle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="投资金额(元)"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">
                <TextView
                    style="@style/custom_word_black_middle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="投资时间"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/home_background"/>
        <com.jinju.android.widget.HomeListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/home_background"
            android:layout_marginBottom="10dp"
            android:listSelector="#00000000"
            android:dividerHeight="0dp">

        </com.jinju.android.widget.HomeListView>
        <include
            android:id="@id/layout_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/layout_list_empty_view"
            android:visibility="gone" />
    </LinearLayout>
</com.jinju.android.widget.MyDetailScrollView>
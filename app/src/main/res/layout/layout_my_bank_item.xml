<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/layout_bank_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@mipmap/icon_zhaoshang_bank"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <RelativeLayout
            android:id="@+id/layout_bank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <com.jinju.android.widget.CircleImageView
                android:id="@id/img_bank"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@id/txt_bank_name"
                style="@style/custom_white_big_text"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/img_bank"
                android:singleLine="true"
                android:textSize="18sp"
                tools:text="招商银行"/>
            <TextView
                style="@style/custom_white_small_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_bank"
                android:layout_below="@id/txt_bank_name"
                android:text="储蓄卡"/>
            <TextView
                android:id="@+id/txt_name"
                style="@style/custom_white_big_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="18sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_card"
            style="@style/custom_white_big_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/txt_once_limit"
                style="@style/custom_white_middle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#F9D3D0" />
            <TextView
                android:id="@+id/txt_day_limit"
                style="@style/custom_white_middle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:textColor="#F9D3D0" />
        </LinearLayout>
    </FrameLayout>
    <TextView
        style="@style/custom_word_black_small_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/bank_list_desc" />

</LinearLayout>
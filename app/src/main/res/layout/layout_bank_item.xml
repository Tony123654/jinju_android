<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="18dp"
		android:paddingRight="18dp"
		android:paddingTop="10dp"
		android:paddingBottom="10dp"
		android:gravity="center_vertical">

		<ImageView
			android:id="@id/img_bank_logo"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_centerVertical="true"/>

		<ImageView
			android:id="@+id/img_bank_select"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@mipmap/icon_confirm"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:visibility="gone"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/img_bank_logo"
			android:layout_toLeftOf="@id/img_bank_select"
			android:layout_marginLeft="10dp"
			android:layout_centerVertical="true"
			android:orientation="vertical">

			<TextView
				style="@style/custom_word_black_big_text"
				android:id="@id/txt_bank_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<TextView
				android:textColor="#868686"
				android:textSize="14sp"
				android:id="@id/txt_bank_info"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"/>
		</LinearLayout>
	</RelativeLayout>
	
	<View
	    android:layout_width="match_parent"
	    android:layout_height="1.0px"
	    android:background="@color/separator"/>

</LinearLayout>